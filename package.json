{
  "name": "@hidoo/sassdoc-to-markdown",
  "version": "1.0.0",
  "description": "Generate markdown documentation from SassDoc comments.",
  "packageManager": "pnpm@9.4.0",
  "engines": {
    "node": ">=18.12.0",
    "pnpm": "9.4.0"
  },
  "type": "module",
  "main": "src/index.js",
  "bin": {
    "sassdoc2md": "bin/index.js"
  },
  "files": [
    "bin/",
    "src/",
    "template/"
  ],
  "scripts": {
    "start": "node ./src/cli.js",
    "format": "prettier --write .",
    "preinstall": "npx only-allow pnpm",
    "prepare": "git config --local core.hooksPath .githooks",
    "test": "pnpm run --sequential '/^test:[^:]+$/'",
    "test:lint": "pnpm run --sequential '/^test:lint:[^:]+$/'",
    "test:lint:js": "eslint .",
    "test:lint:style": "stylelint **/*.{css,scss} --fix",
    "test:unit": "cross-env NODE_ENV=test mocha test/**/*.test.js",
    "version": "pnpm run --sequential '/^(test|version:[^:]+)$/'",
    "version:changelog": "conventional-changelog -p angular -i ./CHANGELOG.md -s -r 0",
    "version:commit": "git add ./CHANGELOG.md"
  },
  "keywords": [
    "sassdoc",
    "markdown",
    "documentation"
  ],
  "publishConfig": {
    "access": "public"
  },
  "author": "hidoo",
  "license": "MIT",
  "dependencies": {
    "glob": "10.4.3",
    "handlebars": "4.7.8",
    "mdast-util-inject": "1.1.0",
    "meow": "13.2.0",
    "remark": "15.0.1",
    "remark-gfm": "4.0.0",
    "sassdoc": "2.7.4"
  },
  "devDependencies": {
    "@commitlint/cli": "19.3.0",
    "@commitlint/config-conventional": "19.2.2",
    "@hidoo/eslint-config": "1.3.1",
    "@hidoo/stylelint-config": "1.0.0",
    "conventional-changelog-cli": "5.0.0",
    "cross-env": "7.0.3",
    "eslint": "8.57.0",
    "lint-staged": "15.2.7",
    "mocha": "10.6.0",
    "prettier": "3.3.2",
    "stylelint": "16.6.1"
  }
}
